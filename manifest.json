{
  "manifest_version": 3,
  "name": "Scrum plum",
  "description": "Enables clean and minimul layout on jira project boards to make scrum presenting easier",
  "version": "1.0",
  "icons": {
    "16": "images/scrum_plum_16.png",
    "32": "images/scrum_plum_32.png",
    "48": "images/scrum_plum_48.png",
    "128": "images/scrum_plum_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/scrum_plum_16.png",
      "32": "images/scrum_plum_32.png",
      "48": "images/scrum_plum_48.png",
      "128": "images/scrum_plum_128.png"
    }
  },
  "permissions": ["scripting", "activeTab"]
}